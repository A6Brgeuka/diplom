<div class="lead">Create post</div>

<form name="createPost">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" ng-model="vm.title" id="login" placeholder="title" required>
    </div>

    <div class="form-group">
        <label for="brief">Brief content</label>
        <textarea type="text" class="form-control" ng-model="vm.brief" id="brief" required></textarea>
    </div>

    <div class="form-group">
        <label for="extended">Extended</label>
        <textarea type="text" class="form-control" ng-model="vm.extended" id="extended" required></textarea>
    </div>

    <button ng-click="vm.create()" class="btn btn-default" ng-disabled="createPost.$invalid">Create</button>
</form>