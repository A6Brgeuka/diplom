<div class="lead">Details and edit post</div>

<form name="detailsPost" class="col-md-6">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" ng-model="vm.title" id="title" placeholder="title" required>
    </div>

    <div class="form-group">
        <label for="brief">Brief content</label>
        <textarea type="text" class="form-control" ng-model="vm.brief" id="brief" required></textarea>
    </div>

    <div class="form-group">
        <label for="extended">Extended content</label>
        <textarea type="text" class="form-control" ng-model="vm.extended" id="extended" required></textarea>
    </div>


    <button ng-click="vm.savePost()" class="btn btn-default" ng-disabled="detailsPost.$invalid">Update</button>
    <button ng-click="vm.removePost()" class="btn btn-default">Remove</button>
</form>