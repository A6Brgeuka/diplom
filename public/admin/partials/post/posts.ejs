<div>
    <p><a href="#/posts">Posts</a></p>
</div>

<div>
    <a class="btn btn-default btn-create btn-create-item" href="#/createpost">Create post</a>
</div>

<div class="form-group" style="width: 200px; margin-top: 30px">
    <input type="text" class="form-control" ng-model="query" placeholder="title">
</div>

<table class="table">
    <tr>
        <th>
            <p>Title</p>
        </th>
        <th style="margin-right: 30px; padding-right: 30px;">
            <p>Author</p>
        </th>
        <th>
            <p>Created</p>
        </th>
    </tr>
    <tr ng-repeat="post in vm.posts">
        <td>
            <a href="#/post/{{post._id}}">{{post.title}}</a>
        </td>
        <td>
            <p>{{post.Author.login}}</p>
        </td>
        <td>
            <p>{{post.publishedDate}}</p>
        </td>
    </tr>
</table>